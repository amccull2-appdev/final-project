<h1>
  Current ETF holdings for <%= @current_user.username %>
</h1>

<a href="/holdings/new">
  Add a new holding
</a>


<table class="table">
  <tr>

    <th>
      Holding ticker
    </th>
    
    <th>
      Holding name
    </th>
    
    <th>
      Best replacement ticker
    </th>
    
    <th>
      Best replacement name
    </th>

    <th>
      Best replacement fee
    </th>
  </tr>

  <% @my_holdings.each do |holding| %>
  <tr>

    <td>
      <%= link_to Etf.find(holding.fund_id).ticker, "/etfs/#{Etf.find(holding.fund_id).id}" %>
    </td>
    
    <td>
      <%= Etf.find(holding.fund_id).name %>
    </td>
    
    <td align="center">
      <%= Etf.find(holding.fund_id).fee %>
    </td>
    
    <td>
      <%= link_to Etf.find(holding.fund_id).best_match.ticker, "/etfs/#{Etf.find(holding.fund_id).best_match.id}" %>
    </td>
    
    <td>
      <%= Etf.find(holding.fund_id).best_match.name %>
    </td>
    
    <td align="center">
      <%= Etf.find(holding.fund_id).best_match.fee %>
    </td>

  </tr>
  <% end %>
</table>
